<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-mask fa-6x"></i>
    <h1 class="display-3">You've Discovered Our Secrets!</h1>

    <% users.forEach(user => { %>
      <% user.secrets.forEach(secret => { %>
        <p class="secret-text"><%= secret.secret %></p>
      <% }) %>
    <% }) %>

    <hr>
    <a class="btn btn-dark btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-light btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
